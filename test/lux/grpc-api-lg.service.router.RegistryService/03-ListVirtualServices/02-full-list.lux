[doc]
Check if router replies with a full list of registered virtual services.
[enddoc]

[include ../../__common/common.luxinc]
[include ../../__common/grpc.luxinc]
[include ../../__common/jq.luxinc]
[include ../../__router/registry-service.luxinc]

[global request-file-service-A1-register=json/00-service-A1-register-request.json]
[global request-file-service-A2-register=json/00-service-A2-register-request.json]
[global request-file-service-B1-register=json/00-service-B1-register-request.json]
[global request-file-service-B2-register=json/00-service-B2-register-request.json]
[global request-file-service-C1-register=json/00-service-C1-register-request.json]
[global request-file-list=json/02-list-request.json]

[shell router]
  [invoke app-start]

[shell register-a1]
  [progress (register a1)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-register-virtual-service} json "" ${request-file-service-A1-register}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]

[shell register-a2]
  [progress (register a2)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-register-virtual-service} json "" ${request-file-service-A2-register}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]

[shell register-b1]
  [progress (register b1)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-register-virtual-service} json "" ${request-file-service-B1-register}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]

[shell register-b2]
  [progress (register b2)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-register-virtual-service} json "" ${request-file-service-B2-register}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]

[shell register-c1]
  [progress (register c1)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-register-virtual-service} json "" ${request-file-service-C1-register}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]

[shell list]
  [progress (list)]
  [invoke grpcc-start-unary ${grpc-service-name} ${grpc-method-list-virtual-services} "json" "" ${request-file-list}]
  [progress (check response)]
  [invoke jq-check-file-match ${headers} .headers.\"content-type\" "application/grpc+proto"]
  [invoke jq-check-file-match ${headers} .headers.\"grpc-user-agent\" "router/"]
  [invoke jq-check-file-match ${headers} .status 200]
  [invoke jq-check-file-match ${data} ".services | length" 5]
  [invoke jq-check-file-match ${data} .services[0].service.stateless.package lg.test.package]
  [invoke jq-check-file-match ${data} .services[0].service.stateless.name StatelessServiceA]
  [invoke jq-check-file-match ${data} .services[0].service.stateless.methods[0].name MethodOne]
  [invoke jq-check-file-match ${data} .services[0].endpoint.host "test-1.lg"]
  [invoke jq-check-file-match ${data} .services[0].endpoint.port 8137]
  [invoke jq-check-file-match ${data} .services[1].service.stateless.package lg.test.package]
  [invoke jq-check-file-match ${data} .services[1].service.stateless.name StatelessServiceA]
  [invoke jq-check-file-match ${data} .services[1].service.stateless.methods[0].name MethodOne]
  [invoke jq-check-file-match ${data} .services[1].endpoint.host "test-2.lg"]
  [invoke jq-check-file-match ${data} .services[1].endpoint.port 8137]
  [invoke jq-check-file-match ${data} .services[2].service.stateless.package lg.test.package]
  [invoke jq-check-file-match ${data} .services[2].service.stateless.name StatelessServiceB]
  [invoke jq-check-file-match ${data} .services[2].service.stateless.methods[0].name MethodOne]
  [invoke jq-check-file-match ${data} .services[2].endpoint.host "test-1.lg"]
  [invoke jq-check-file-match ${data} .services[2].endpoint.port 8137]
  [invoke jq-check-file-match ${data} .services[3].service.stateless.package lg.test.package]
  [invoke jq-check-file-match ${data} .services[3].service.stateless.name StatelessServiceB]
  [invoke jq-check-file-match ${data} .services[3].service.stateless.methods[0].name MethodOne]
  [invoke jq-check-file-match ${data} .services[3].endpoint.host "test-2.lg"]
  [invoke jq-check-file-match ${data} .services[3].endpoint.port 8137]
  [invoke jq-check-file-match ${data} .services[4].service.stateless.package lg.test.package]
  [invoke jq-check-file-match ${data} .services[4].service.stateless.name StatelessServiceC]
  [invoke jq-check-file-match ${data} .services[4].service.stateless.methods[0].name MethodOne]
  [invoke jq-check-file-match ${data} .services[4].endpoint.host "test-1.lg"]
  [invoke jq-check-file-match ${data} .services[4].endpoint.port 8137]
  [invoke jq-check-file-match ${trailers} .trailers.\"grpc-status\" 0]
  [invoke jq-check-file-empty ${trailers} .trailers.\"grpc-message\"]

[cleanup]
