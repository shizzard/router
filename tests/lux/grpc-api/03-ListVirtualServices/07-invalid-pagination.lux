[doc]
Check if router fails to list registered virtual services with invalid pagination request.
[enddoc]

[include ../../__common/common.luxinc]
[include ../../__common/grpc.luxinc]
[include ../../__common/jq.luxinc]
[include ../../__router/registry-service.luxinc]

[global request-file-invalid-page-size-list=json/07-invalid-page-size-list-request.json]
[global response-file-invalid-page-size-list=json/07-invalid-page-size-list-response.json]
[global request-file-invalid-token-list=json/07-invalid-token-list-request.json]
[global response-file-invalid-token-list=json/07-invalid-token-list-response.json]

[shell router]
  [invoke app-start]

[shell request]
  [progress (list with invalid page size)]
  [invoke grpc-call-unary ${service-definition} ${request-file-invalid-page-size-list} ${response-file-invalid-page-size-list} ${service-name} ${method-list}]

[shell response]
  [progress (check response)]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .header.\"content-type\" "application/grpc+proto"]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .header.\"grpc-user-agent\" "router/"]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .status.code InvalidArgument]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .status.number 3]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .status.message "Invalid payload"]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .messages null]
  [invoke jq-check-file-match ${response-file-invalid-page-size-list} .trailer.pagination_request_page_size_invalid "Pagination request page size is invalid: 0"]

[shell request]
  [progress (list with invalid page token)]
  [invoke grpc-call-unary ${service-definition} ${request-file-invalid-token-list} ${response-file-invalid-token-list} ${service-name} ${method-list}]

[shell response]
  [progress (check response)]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .header.\"content-type\" "application/grpc+proto"]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .header.\"grpc-user-agent\" "router/"]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .status.code InvalidArgument]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .status.number 3]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .status.message "Invalid payload"]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .messages null]
  [invoke jq-check-file-match ${response-file-invalid-token-list} .trailer.pagination_request_page_token_invalid "Pagination request page token is invalid: AAAA"]

[cleanup]
